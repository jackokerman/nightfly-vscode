  "tokenColors": [
    // ── Comments ─────────────────────────────────────────
    {
      "name": "Comments",
      "scope": [
        "comment",
        "punctuation.definition.comment"
      ],
      "settings": {
        "foreground": "#7c8f8f",
        "fontStyle": "italic"
      }
    },
    // ── Doc comments / annotations ───────────────────────
    {
      "name": "Doc comment keywords",
      "scope": [
        "comment.block.documentation storage.type",
        "comment.block.documentation punctuation.definition",
        "keyword.other.documentation",
        "storage.type.class.jsdoc",
        "entity.name.type.instance.jsdoc"
      ],
      "settings": {
        "foreground": "#7c8f8f",
        "fontStyle": "italic"
      }
    },
    // ── Strings ──────────────────────────────────────────
    {
      "name": "Strings",
      "scope": [
        "string",
        "string.quoted",
        "string.template"
      ],
      "settings": {
        "foreground": "#ecc48d"
      }
    },
    {
      "name": "String interpolation expression",
      "scope": [
        "string.template meta.template.expression",
        "punctuation.definition.template-expression"
      ],
      "settings": {
        "foreground": "#c792ea"
      }
    },
    // ── Numbers ──────────────────────────────────────────
    {
      "name": "Numbers",
      "scope": [
        "constant.numeric",
        "constant.numeric.integer",
        "constant.numeric.float",
        "constant.numeric.hex",
        "constant.numeric.octal",
        "constant.numeric.binary"
      ],
      "settings": {
        "foreground": "#f78c6c"
      }
    },
    // ── Booleans ─────────────────────────────────────────
    {
      "name": "Booleans",
      "scope": [
        "constant.language.boolean",
        "constant.language.true",
        "constant.language.false"
      ],
      "settings": {
        "foreground": "#ff5874"
      }
    },
    // ── Null / undefined ─────────────────────────────────
    {
      "name": "Null / undefined / nil",
      "scope": [
        "constant.language.null",
        "constant.language.undefined",
        "constant.language.nil"
      ],
      "settings": {
        "foreground": "#ff5874"
      }
    },
    // ── Constants (other) ────────────────────────────────
    {
      "name": "Constants",
      "scope": [
        "constant",
        "constant.other",
        "variable.other.constant"
      ],
      "settings": {
        "foreground": "#7fdbca"
      }
    },
    // ── Keywords ─────────────────────────────────────────
    {
      "name": "Keywords",
      "scope": [
        "keyword",
        "keyword.control",
        "keyword.control.flow",
        "keyword.control.loop",
        "keyword.control.conditional",
        "keyword.control.import",
        "keyword.control.export",
        "keyword.control.from"
      ],
      "settings": {
        "foreground": "#c792ea",
        "fontStyle": ""
      }
    },
    {
      "name": "Keyword operators (typeof, instanceof, new, delete, in, of)",
      "scope": [
        "keyword.operator.expression",
        "keyword.operator.new",
        "keyword.operator.delete",
        "keyword.operator.typeof",
        "keyword.operator.instanceof",
        "keyword.operator.in",
        "keyword.operator.of",
        "keyword.operator.logical.python"
      ],
      "settings": {
        "foreground": "#c792ea"
      }
    },
    // ── Storage / declaration keywords ───────────────────
    {
      "name": "Storage (var, let, const, function, class, etc.)",
      "scope": [
        "storage",
        "storage.type",
        "storage.modifier"
      ],
      "settings": {
        "foreground": "#c792ea",
        "fontStyle": ""
      }
    },
    {
      "name": "Arrow function",
      "scope": [
        "storage.type.function.arrow"
      ],
      "settings": {
        "foreground": "#c792ea"
      }
    },
    // ── Operators ────────────────────────────────────────
    {
      "name": "Operators",
      "scope": [
        "keyword.operator",
        "keyword.operator.assignment",
        "keyword.operator.arithmetic",
        "keyword.operator.comparison",
        "keyword.operator.relational",
        "keyword.operator.logical",
        "keyword.operator.ternary",
        "keyword.operator.spread",
        "keyword.operator.rest",
        "keyword.operator.bitwise",
        "keyword.operator.increment",
        "keyword.operator.decrement"
      ],
      "settings": {
        "foreground": "#ff5874"
      }
    },
    // ── Punctuation ──────────────────────────────────────
    {
      "name": "Punctuation",
      "scope": [
        "punctuation",
        "punctuation.separator",
        "punctuation.terminator",
        "meta.brace.round",
        "meta.brace.square",
        "meta.brace.curly",
        "punctuation.definition.block",
        "punctuation.definition.parameters",
        "punctuation.definition.arguments"
      ],
      "settings": {
        "foreground": "#c3ccdc"
      }
    },
    // ── Variables ────────────────────────────────────────
    {
      "name": "Variables",
      "scope": [
        "variable",
        "variable.other",
        "variable.other.readwrite",
        "variable.other.object"
      ],
      "settings": {
        "foreground": "#c3ccdc"
      }
    },
    {
      "name": "Variable - this / self",
      "scope": [
        "variable.language.this",
        "variable.language.self",
        "variable.language.special"
      ],
      "settings": {
        "foreground": "#7fdbca"
      }
    },
    // ── Parameters ───────────────────────────────────────
    {
      "name": "Parameters",
      "scope": [
        "variable.parameter",
        "variable.parameter.function"
      ],
      "settings": {
        "foreground": "#e39aa6"
      }
    },
    // ── Properties ───────────────────────────────────────
    {
      "name": "Object properties",
      "scope": [
        "variable.other.property",
        "variable.other.object.property",
        "support.variable.property",
        "meta.object-literal.key"
      ],
      "settings": {
        "foreground": "#b0b2f4"
      }
    },
    // ── Functions ────────────────────────────────────────
    {
      "name": "Function names",
      "scope": [
        "entity.name.function",
        "meta.function-call entity.name.function",
        "support.function",
        "meta.function-call support.function"
      ],
      "settings": {
        "foreground": "#82aaff",
        "fontStyle": ""
      }
    },
    {
      "name": "Function call method",
      "scope": [
        "entity.name.function.member",
        "meta.method-call entity.name.function"
      ],
      "settings": {
        "foreground": "#82aaff"
      }
    },
    {
      "name": "Built-in / support functions",
      "scope": [
        "support.function.console",
        "support.function.math",
        "support.function.json",
        "support.function.builtin"
      ],
      "settings": {
        "foreground": "#82aaff"
      }
    },
    // ── Types / Classes ──────────────────────────────────
    {
      "name": "Types",
      "scope": [
        "entity.name.type",
        "support.type",
        "support.type.primitive",
        "support.type.builtin"
      ],
      "settings": {
        "foreground": "#21c7a8"
      }
    },
    {
      "name": "Class names",
      "scope": [
        "entity.name.class",
        "entity.other.inherited-class",
        "support.class"
      ],
      "settings": {
        "foreground": "#ffcb8b"
      }
    },
    {
      "name": "Type annotation / parameters",
      "scope": [
        "meta.type.annotation entity.name.type",
        "meta.type.parameters entity.name.type",
        "entity.name.type.alias",
        "entity.name.type.interface",
        "entity.name.type.enum"
      ],
      "settings": {
        "foreground": "#21c7a8"
      }
    },
    // ── Interfaces / type keywords ───────────────────────
    {
      "name": "Interface / type keyword",
      "scope": [
        "keyword.control.type",
        "storage.type.interface",
        "storage.type.type"
      ],
      "settings": {
        "foreground": "#c792ea"
      }
    },
    // ── Decorators / Annotations ─────────────────────────
    {
      "name": "Decorators",
      "scope": [
        "meta.decorator",
        "meta.decorator entity.name.function",
        "punctuation.decorator"
      ],
      "settings": {
        "foreground": "#ae81ff"
      }
    },
    // ── Escape sequences ─────────────────────────────────
    {
      "name": "Escape characters",
      "scope": [
        "constant.character.escape"
      ],
      "settings": {
        "foreground": "#ff5874"
      }
    },
    // ── Regex ────────────────────────────────────────────
    {
      "name": "Regex",
      "scope": [
        "string.regexp"
      ],
      "settings": {
        "foreground": "#7fdbca"
      }
    },
    {
      "name": "Regex character class / group",
      "scope": [
        "string.regexp constant.character",
        "string.regexp keyword.other",
        "string.regexp punctuation.definition.group",
        "string.regexp keyword.operator"
      ],
      "settings": {
        "foreground": "#ff5874"
      }
    },

    // ── HTML / XML ───────────────────────────────────────
    {
      "name": "HTML tags",
      "scope": [
        "entity.name.tag"
      ],
      "settings": {
        "foreground": "#82aaff"
      }
    },
    {
      "name": "HTML/JSX component tags",
      "scope": [
        "support.class.component",
        "support.class.component.jsx",
        "support.class.component.tsx"
      ],
      "settings": {
        "foreground": "#21c7a8"
      }
    },
    {
      "name": "Tag attributes",
      "scope": [
        "entity.other.attribute-name",
        "entity.other.attribute-name.html"
      ],
      "settings": {
        "foreground": "#7fdbca",
        "fontStyle": ""
      }
    },
    {
      "name": "Tag delimiters (angle brackets)",
      "scope": [
        "punctuation.definition.tag",
        "punctuation.definition.tag.begin",
        "punctuation.definition.tag.end"
      ],
      "settings": {
        "foreground": "#a1cd5e"
      }
    },
    {
      "name": "HTML entities",
      "scope": [
        "constant.character.entity",
        "punctuation.definition.entity"
      ],
      "settings": {
        "foreground": "#7fdbca"
      }
    },

    // ── JSX expression braces ────────────────────────────
    {
      "name": "JSX expression braces",
      "scope": [
        "punctuation.section.embedded.begin.jsx",
        "punctuation.section.embedded.end.jsx",
        "punctuation.section.embedded.begin.tsx",
        "punctuation.section.embedded.end.tsx"
      ],
      "settings": {
        "foreground": "#c792ea"
      }
    },

